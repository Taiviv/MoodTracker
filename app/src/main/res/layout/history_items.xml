<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_items_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/banana_yellow"
    android:padding="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/history_items_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="date_time" />

    <ImageView
        android:id="@+id/history_items_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:background="@null"
        android:contentDescription="@string/comment_icon"
        android:src="@drawable/ic_comment_black_48px" />

    <ImageView
        android:id="@+id/history_items_img"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:background="@null"
        tools:src="@drawable/smiley_happy" />

</LinearLayout>